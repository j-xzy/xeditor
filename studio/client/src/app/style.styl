.studio
  width: 100vw !important
  height: 100vh !important
  overflow: hidden
  background: #fff
  .studio-header
    background-image: url('../assets/images/headbar.png')
    background-size: contain
  .studio-left-side
    display: flex
    width: 300px !important
  .studio-right-sider
    width: 280px !important
    display: flex
    background: #232323
  .studio-middle
    overflow: hidden
    display: flex
    flex-direction: column
    .studio-middle-bottom
      position: relative
      width: 100%
      height: 16px
      background: #222
    .studio-canvas-container
      position: relative
      flex: 1
      padding: 20px 0 0 20px
      overflow: auto
      transition: all .2s linear
      background: #3d3d3d
      .studio-canvas
        position: absolute
        background: #fff
        box-shadow: 0 0 2px 0 #fff
        transition: all .2s linear
        transform-origin: 0 0

::-webkit-scrollbar 
  width: 8px
  height: 8px
    
::-webkit-scrollbar-track 
  background: #777
  border-radius: 10px

::-webkit-scrollbar-thumb 
  border-radius: 10px
  background: #ff8800
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.1)
    
::-webkit-scrollbar-thumb:window-inactive 
  background: rgba(0,0,0,0.2)
    