.layout
  position: relative
  display: flex
  z-index: 0
  flex-direction: column;
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  .layout-header
    position: relative
    z-index: 1
    width: 100%
    height: 36px
    top: 0
    left: 0
  .layout-footer
    position: relative
    z-index: 1
    width: 100%
    height: 36px
    left: 0
  .layout-float
    position: fixed;
    z-index: 2
    top: 0
    left: 0
    width: 0
    height: 0
  .layout-content
    position: relative
    z-index: 1
    flex: 1
    display: flex
    width: 100%
    height: 100%
    .layout-sider
      position: relative
      height: 100%
      width: 300px
    .layout-middle
      flex: 1