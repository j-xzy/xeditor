.evt-property-panel
  padding: 3px 5px
  margin: 2px 0 0 0
  background: rgba(0, 0, 0, 0.2)
  .evt-property-panel-item
    display: flex
    align-items: center
    margin: 0 0 3px 0px
    .evt-property-panel-label
      color: #fff;
      font-size: 12px;
      padding: 0 0 0 5px;
    .evt-property-panel-select, .evt-property-panel-label
      width: 72px
      margin: 0 8px 0 0
    .evt-property-panel-delete
      margin: 0 0 0 5px
  .evt-property-panel-add
    position: relative
    top: 2px
    left: 50%