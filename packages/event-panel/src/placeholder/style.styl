.evt-placeholder
  opacity: 1 !important
  position: absolute
  height: 8px
  z-index: 10
  border-style: solid
  border-color: transparent #fbff00
  outline: none
  transition: top .2s,left .2s,width .2s,height .2s
  pointer-events: none
  .evt-placeholder-inner
    width: 100%
    background-color: #fbff00
    box-shadow: 0 0 3px rgba(0,0,0,0.2)
    padding: 1px
    outline: none