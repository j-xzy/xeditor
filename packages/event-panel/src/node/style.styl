@import('../style/normalFlex')

.evt
  position: relative
  display: flex
  flex-direction: column
  .evt-node
    @extend .normal-flex
    position: relative
    align-items: flex-start
    min-height: 28px
    padding: 3px 5px
    .evt-node-left
      display: flex
      align-items: center
      margin: 0 10px 0 0
      height: 22px
      @import('../style/disabled.styl')
    .evt-node-right
      @extend .normal-flex
      min-height: 22px
  .evt-node-line
    position: absolute
    background: #fff
    left: -20px
  .evt-node-line-hor
    top: 15px
    width: 20px
    height: 1px
  .evt-node-line-ver
    width: 1px
  .evt-node-expand
    position: absolute
    left: -14px
    top: 10px
    font-size: 12px
    cursor: pointer
    &:before
      color: #fff !important
      font-weight: 900
  .evt-node-child
    position: relative
    padding: 0 0 0 30px